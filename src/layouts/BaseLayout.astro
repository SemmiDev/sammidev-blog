---
import '~/assets/styles/base.css';

import MetaTags from '~/components/core/MetaTags.astro';
import BasicScripts from '~/components/core/BasicScripts.astro';

const { meta = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth 2xl:text-[20px]">
	<head>
		<MetaTags {...meta} />
	</head>

	<body>
		<div
			class="antialiased min-h-screen text-gray-900 dark:text-slate-300 tracking-tight bg-white dark:bg-slate-900 dark:bg-gradient-to-r dark:from-[#0e1111] dark:via-slate-900 dark:to-[#182747]"
		>
			<slot />
		</div>
		<BasicScripts />
		<style is:global>
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
