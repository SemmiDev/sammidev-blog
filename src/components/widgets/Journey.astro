---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
---

<section class="px-4 mx-auto -my-5 md:px-8 max-w-lg">
	<div class="w-full flex flex-wrap gap-2 justify-center items-center">
		<label
			for="my-modal-skills"
			class="px-3 py-2 rounded-xl text-xs text-yellow-400 border-1 border border-yellow-400 hover:bg-yellow-400 hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Sklls</label
		>
		<label
			for="my-modal-education"
			class="px-3 py-2 rounded-xl text-xs text-green-400 border-1 border border-green-400 hover:bg-green-400 hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Education</label
		>
		<label
			for="my-modal-experience"
			class="px-3 py-2 rounded-xl text-xs text-blue-400 border-1 border border-blue-400 hover:bg-blue-400 hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Experience</label
		>
		<label
			for="my-modal-achievement"
			class="px-3 py-2 rounded-xl text-xs text-purple-400 border-1 border border-purple-400 hover:bg-purple-400 hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Achievement</label
		>
		<a
			href="/certificate"
			class="px-3 py-2 rounded-xl text-xs text-[#ffa6c9] border-1 border border-[#ffa6c9] hover:bg-[#ffa6c9] hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Certificate</a
		><a
			class="px-3 py-2 rounded-xl text-xs text-[#8bffd8] border-1 border border-[#8bffd8] hover:bg-[#8bffd8] hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Portfolio</a
		><a
			class="px-3 py-2 rounded-xl text-xs text-[#149fc8] border-1 border border-[#149fc8] hover:bg-[#149fc8] hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Content</a
		>
		<label
			for="my-modal-contact"
			class="px-3 py-2 rounded-xl text-xs text-[#ffa6c9] border-1 border border-[#ffa6c9] hover:bg-[#ffa6c9] hover:text-black transition-all duration-150 ease-linear hover:cursor-pointer"
			>Contact</label
		>
	</div>
</section>
